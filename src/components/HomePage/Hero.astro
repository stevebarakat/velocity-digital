---
import { ArrowRight } from "lucide-astro";
---

<section class="hero">
  <div class="heroContent">
    <h1 class="heroTitle">Lightning-Fast Websites That Convert</h1>
    <p class="heroDescription">
      We build modern headless WordPress sites with Astro. Superior performance,
      better SEO, and exceptional user experiences.
    </p>
    <div class="heroButtons">
      <button class="primaryButton">
        Start Your Project <ArrowRight size={20} />
      </button>
      <button class="secondaryButton">View Our Work</button>
    </div>
  </div>
</section>

<style>
  /* Hero section */
  .hero {
    background: linear-gradient(
      12deg,
      var(--background-secondary) 0%,
      var(--background-tertiary) 100%
    );
    color: var(--text-primary);
    padding: var(--spacing-5xl) 5% var(--spacing-4xl);
    text-align: center;
  }

  .heroContent {
    margin: 0 auto;
    max-width: var(--container-lg);
  }

  .heroTitle {
    color: var(--text-secondary);
    font-size: var(--font-size-6xl);
    font-weight: var(--font-weight-extrabold);
    letter-spacing: -0.02em;
    line-height: var(--line-height-tight);
    margin-bottom: var(--spacing-lg);
  }

  .heroDescription {
    font-size: var(--font-size-xl);
    margin: 0 auto var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
    max-width: 700px;
    opacity: 0.95;
  }

  .heroButtons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-lg);
    justify-content: center;
  }

  .primaryButton {
    align-items: center;
    background: var(--energy-primary);
    border: none;
    border-radius: var(--radius-none);
    box-shadow: 0 0 20px var(--energy-glow);
    color: var(--background-primary);
    cursor: pointer;
    display: flex;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    gap: var(--spacing-sm);
    padding: var(--spacing-md) var(--spacing-2xl);
    transition: var(--transition-normal);
  }

  .primaryButton:hover {
    background: var(--energy-hover);
    box-shadow: 0 0 30px var(--energy-glow);
    transform: translateY(-2px);
  }

  .secondaryButton {
    background: transparent;
    border: 2px solid var(--energy-primary);
    border-radius: var(--radius-none);
    box-shadow: 0 0 15px var(--energy-glow);
    color: var(--energy-primary);
    cursor: pointer;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    padding: var(--spacing-md) var(--spacing-2xl);
    transition: var(--transition-normal);
  }

  .secondaryButton:hover {
    background: var(--energy-primary);
    box-shadow: 0 0 25px var(--energy-glow);
    color: var(--background-primary);
  }
</style>
